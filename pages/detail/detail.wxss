/* pages/detail/detail.wxss */
.poster-wrap{
  background-color: #000;
  padding: 50rpx 0;
  text-align: center;
}
.poster-wrap image{
  width: 400rpx;
  height: 560rpx;
}
.info-wrap{
  padding:0 20px;
  background-color:#f8f8f8;
}
/* 标题区域  */
.title-wrap{
  display: flex;
  justify-content: space-between;
  padding-top:20px;
  
}
.title-wrap-left{
  flex:1;

}
.title{
  font-size:40rpx;
  color:#444;
  font-weight:bold;
}
.site-pubdate-duration{
  margin-top:5px;
  font-size:24rpx;
  color:#999;
}
.title-wrap-right{
  padding:10px;
  background-color: #fff;
  box-shadow: 0px 0px 5px #ccc;
  margin-left:20px;
}
.rating-title{
  font-size:24rpx;
  color:#ccc;
}
.rating{
  color:#444;
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  margin-top:2px; 
}
.rating-count{
  font-size:24rpx;
  color:#999;
  margin-top:2px;
}
/* 剧情简介  */
.summary-wrap{
  margin-top:20px;
}
.section-title{
  font-size:24rpx;
  color:#999;
}
.summary{
  margin-top:10px;
  font-size:32rpx;
  color:#444;
  line-height:1.4;
}
.expand-btn{
  color:#690;
  padding-left:20px;
}
/* 影人  */
.casts-wrap{
  margin-top:20px;
}
.casts-list{
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  margin-top:10px;
}

.cast-item{
  width:160rpx;
  /* height:225rpx; */
  margin-right:5px;
}
.cast-item:nth-last-child(1){
  margin-right: 0;
}
.cast-item-poster image{
   width:160rpx;
   height:225rpx; 
}
.cast-item-name{
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
font-size:24rpx;
padding-bottom:40px;
text-align: center;
}
